<Window x:Class="MediGest.CrearMedico"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediGest.Pages"
        mc:Ignorable="d"
        Title="Crear Medico" Height="269" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Nombre -->
        <TextBlock Text="Nombre:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="txtNombre" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <!-- Apellidos -->
        <TextBlock Text="Apellidos:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="txtApellidos" Grid.Row="1" Grid.Column="1" Margin="5"/>

        <!--Numero Corporativo-->
        <TextBlock Text="Numero Corporativo:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="txtNumeroC" Grid.Row="2" Grid.Column="1" Margin="5"/>

        <!--Email-->
        <TextBlock Text="Email:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="txtEmail" Grid.Row="3" Grid.Column="1" Margin="5"/>
         
        <!---Especialidad-->
        <TextBlock Text="Especialidad:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
        <ComboBox x:Name="cmbEspecialidad" Grid.Row="4" Grid.Column="1" Margin="5"/>

        <!-- Botones -->
        <StackPanel Grid.Row="9" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button x:Name="btnGuardar"
                    Content="Guardar"
                    Width="90"
                    Click="btnGuardar_Click"/>
        </StackPanel>
    </Grid>
</Window>