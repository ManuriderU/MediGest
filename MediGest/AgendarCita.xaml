<Window x:Class="MediGest.AgendarCita"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agendar Cita" Height="500" Width="800" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- 🗓️ Calendario de citas -->
        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="10" Padding="10" Margin="10">
            <StackPanel Margin="0,0,0,152">
                <TextBlock Text="Seleccionar Fecha" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                <Calendar x:Name="CalendarioCitas"
                          SelectionMode="SingleDate"
                          SelectedDatesChanged="CalendarioCitas_SelectedDatesChanged" Height="181" />
            </StackPanel>
        </Border>

        <!-- 📋 Panel derecho: información de cita -->
        <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="1" CornerRadius="10" Padding="15" Margin="10">
            <StackPanel>
                <TextBlock Text="Detalles de la Cita" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Paciente:" Width="100" VerticalAlignment="Center"/>
                    <ComboBox x:Name="CmbPaciente" Width="250"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Médico:" Width="100" VerticalAlignment="Center"/>
                    <ComboBox x:Name="CmbMedico" Width="250" Height="30"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Hora:" Width="100" VerticalAlignment="Center"/>
                    <ComboBox x:Name="CmbHora" Width="120"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Estado:" Width="100" VerticalAlignment="Center"/>
                    <ComboBox x:Name="CmbEstado" Width="150">
                        <ComboBoxItem Content="Pendiente" IsSelected="True"/>
                        <ComboBoxItem Content="Confirmada"/>
                    </ComboBox>
                </StackPanel>

                <TextBlock Text="Observaciones:" Margin="0,10,0,5"/>
                <TextBox x:Name="TxtObservaciones" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>

                <Button x:Name="BtnAgendar" Content="Agendar Cita" Width="150" Height="35"
                        Margin="0,15,0,0" HorizontalAlignment="Right"
                        IsDefault="True"
                        Click="BtnAgendar_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>