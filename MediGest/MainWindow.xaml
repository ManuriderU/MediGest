<Window x:Class="MediGest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MediGest Pro - Gestor Médico Profesional"
        Height="800" Width="1400"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Colores del sistema -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#0ea5e9"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#10b981"/>
        <SolidColorBrush x:Key="WarningColor" Color="#f59e0b"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#f8fafc"/>
        <SolidColorBrush x:Key="SidebarColor" Color="#1e293b"/>
        <SolidColorBrush x:Key="CardColor" Color="#ffffff"/>
        <SolidColorBrush x:Key="TextColor" Color="#334155"/>

        <!-- Estilos -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardColor}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#94a3b8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#334155"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="{StaticResource SidebarColor}">
            <StackPanel>
                <!-- Logo Header -->
                <Border Padding="24" BorderBrush="#334155" BorderThickness="0,0,0,1">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                              Stroke="White" StrokeThickness="2" Width="24" Height="24" Stretch="Uniform" Margin="0,0,12,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="MediGest Prosss" FontSize="18" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Sistema Médico" FontSize="11" Foreground="#94a3b8"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Navigation -->
                <StackPanel Margin="16">
                    <!-- Dashboard -->
                    <Button Style="{StaticResource NavButton}" Margin="0,0,0,4" Background="#334155">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M3,3 h7 v7 h-7 z M14,3 h7 v7 h-7 z M14,14 h7 v7 h-7 z M3,14 h7 v7 h-7 z"
                                  Stroke="White" StrokeThickness="2" Width="20" Height="20" Stretch="Uniform" Margin="0,0,12,0"/>
                            <TextBlock Text="Dashboard" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Pacientes -->
                    <Button Style="{StaticResource NavButton}" Margin="0,0,0,4">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2 M12,11 a4,4 0 1,0 0,-8 a4,4 0 1,0 0,8"
                                  Stroke="#94a3b8" StrokeThickness="2" Width="20" Height="20" Stretch="Uniform" Margin="0,0,12,0"/>
                            <TextBlock Text="Pacientes" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Citas -->
                    <Button Style="{StaticResource NavButton}" Margin="0,0,0,4">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M3,4 h18 v18 h-18 z M16,2 v4 M8,2 v4 M3,10 h18"
                                  Stroke="#94a3b8" StrokeThickness="2" Width="20" Height="20" Stretch="Uniform" Margin="0,0,12,0"/>
                            <TextBlock Text="Citas" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Facturación -->
                    <Button Style="{StaticResource NavButton}">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z M14,2 L14,8 L20,8 M16,13 h-8 M16,17 h-8"
                                  Stroke="#94a3b8" StrokeThickness="2" Width="20" Height="20" Stretch="Uniform" Margin="0,0,12,0"/>
                            <TextBlock Text="Facturación" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Column="1" Background="{StaticResource BackgroundColor}" Padding="32">
            <StackPanel>
                <!-- Page Header -->
                <Grid Margin="0,0,0,32">
                    <StackPanel>
                        <TextBlock Text="Dashboard" FontSize="32" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>
                        <TextBlock Text="Resumen general de la actividad de su consulta" FontSize="14" Foreground="#64748b" Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>

                <!-- Stats Grid -->
                <Grid Margin="0,0,0,32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Stat Card 1: Pacientes Registrados -->
                    <Border Grid.Column="0" Style="{StaticResource StatCard}">
                        <StackPanel>
                            <Grid Margin="0,0,0,16">
                                <TextBlock Text="Pacientes Registrados" FontSize="14" Foreground="#64748b" FontWeight="Medium"/>
                                <Ellipse Width="40" Height="40" Fill="#eff6ff" HorizontalAlignment="Right"/>
                                <Path Data="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2 M12,11 a4,4 0 1,0 0,-8 a4,4 0 1,0 0,8"
                                      Stroke="{StaticResource PrimaryColor}" StrokeThickness="2" Width="20" Height="20" Stretch="Uniform" HorizontalAlignment="Right" Margin="0,10,10,0"/>
                            </Grid>
                            <TextBlock Text="247" FontSize="36" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Path Data="M22,7 L13.5,15.5 L8.5,10.5 L2,17 M16,7 h6 v6"
                                      Stroke="{StaticResource SuccessColor}" StrokeThickness="2" Width="12" Height="12" Stretch="Uniform" Margin="0,0,6,0"/>
                                <TextBlock Text="+12% desde el mes pasado" FontSize="12" Foreground="{StaticResource SuccessColor}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Stat Card 2: Citas Hoy -->
                    <Border Grid.Column="1" Style="{StaticResource StatCard}">
                        <StackPanel>
                            <Grid Margin="0,0,0,16">
                                <TextBlock Text="Citas Hoy" FontSize="14" Foreground="#64748b" FontWeight="Medium"/>
                                <Ellipse Width="40" Height="40" Fill="#f0fdf4" HorizontalAlignment="Right"/>
                                <Path Data="M3,4 h18 v18 h-18 z M16,2 v4 M8,2 v4 M3,10 h18"
                                      Stroke="{StaticResource SuccessColor}" StrokeThickness="2" Width="20" Height="20" Stretch="Uniform" HorizontalAlignment="Right" Margin="0,10,10,0"/>
                            </Grid>
                            <TextBlock Text="18" FontSize="36" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Path Data="M22,7 L13.5,15.5 L8.5,10.5 L2,17 M16,7 h6 v6"
                                      Stroke="{StaticResource SuccessColor}" StrokeThickness="2" Width="12" Height="12" Stretch="Uniform" Margin="0,0,6,0"/>
                                <TextBlock Text="+5 desde ayer" FontSize="12" Foreground="{StaticResource SuccessColor}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Stat Card 3: Consultas Este Mes -->
                    <Border Grid.Column="2" Style="{StaticResource StatCard}">
                        <StackPanel>
                            <Grid Margin="0,0,0,16">
                                <TextBlock Text="Consultas Este Mes" FontSize="14" Foreground="#64748b" FontWeight="Medium"/>
                                <Ellipse Width="40" Height="40" Fill="#fffbeb" HorizontalAlignment="Right"/>
                                <Path Data="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z M14,2 L14,8 L20,8 M16,13 h-8 M16,17 h-8"
                                      Stroke="{StaticResource WarningColor}" StrokeThickness="2" Width="20" Height="20" Stretch="Uniform" HorizontalAlignment="Right" Margin="0,10,10,0"/>
                            </Grid>
                            <TextBlock Text="156" FontSize="36" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Path Data="M22,7 L13.5,15.5 L8.5,10.5 L2,17 M16,7 h6 v6"
                                      Stroke="{StaticResource SuccessColor}" StrokeThickness="2" Width="12" Height="12" Stretch="Uniform" Margin="0,0,6,0"/>
                                <TextBlock Text="+8% desde el mes pasado" FontSize="12" Foreground="{StaticResource SuccessColor}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Stat Card 4: Facturación Mensual -->
                    <Border Grid.Column="3" Style="{StaticResource StatCard}">
                        <StackPanel>
                            <Grid Margin="0,0,0,16">
                                <TextBlock Text="Facturación Mensual" FontSize="14" Foreground="#64748b" FontWeight="Medium"/>
                                <Ellipse Width="40" Height="40" Fill="#eff6ff" HorizontalAlignment="Right"/>
                                <Path Data="M12,1 v22 M17,5 h-7.5 a3.5,3.5 0 0,0 0,7 h5 a3.5,3.5 0 0,1 0,7 h-8.5"
                                      Stroke="{StaticResource PrimaryColor}" StrokeThickness="2" Width="20" Height="20" Stretch="Uniform" HorizontalAlignment="Right" Margin="0,10,10,0"/>
                            </Grid>
                            <TextBlock Text="$12,450" FontSize="36" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Path Data="M22,7 L13.5,15.5 L8.5,10.5 L2,17 M16,7 h6 v6"
                                      Stroke="{StaticResource SuccessColor}" StrokeThickness="2" Width="12" Height="12" Stretch="Uniform" Margin="0,0,6,0"/>
                                <TextBlock Text="+15% desde el mes pasado" FontSize="12" Foreground="{StaticResource SuccessColor}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Dashboard Cards Row -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Today's Appointments Card -->
                    <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="24" Margin="8">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <Path Data="M3,4 h18 v18 h-18 z M16,2 v4 M8,2 v4 M3,10 h18"
                                      Stroke="{StaticResource TextColor}" StrokeThickness="2" Width="20" Height="20" Stretch="Uniform" Margin="0,0,8,0"/>
                                <TextBlock Text="Citas de Hoy" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextColor}"/>
                            </StackPanel>

                            <!-- Appointment Item 1 -->
                            <Border BorderBrush="#e2e8f0" BorderThickness="0,0,0,1" Padding="0,0,0,16" Margin="0,0,0,16">
                                <Grid>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="36" Height="36" Fill="#eff6ff" Margin="0,0,12,0"/>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="María González" FontWeight="Medium" Foreground="{StaticResource TextColor}"/>
                                            <TextBlock Text="09:00 - Consulta General" FontSize="12" Foreground="#64748b" Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <Border Background="#dcfce7" CornerRadius="12" Padding="8,4" HorizontalAlignment="Right">
                                        <TextBlock Text="confirmada" FontSize="11" Foreground="#16a34a" FontWeight="Medium"/>
                                    </Border>
                                </Grid>
                            </Border>

                            <!-- Appointment Item 2 -->
                            <Border BorderBrush="#e2e8f0" BorderThickness="0,0,0,1" Padding="0,0,0,16" Margin="0,0,0,16">
                                <Grid>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="36" Height="36" Fill="#eff6ff" Margin="0,0,12,0"/>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="Carlos Rodríguez" FontWeight="Medium" Foreground="{StaticResource TextColor}"/>
                                            <TextBlock Text="09:30 - Control" FontSize="12" Foreground="#64748b" Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <Border Background="#dcfce7" CornerRadius="12" Padding="8,4" HorizontalAlignment="Right">
                                        <TextBlock Text="confirmada" FontSize="11" Foreground="#16a34a" FontWeight="Medium"/>
                                    </Border>
                                </Grid>
                            </Border>

                            <!-- Appointment Item 3 -->
                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="36" Height="36" Fill="#eff6ff" Margin="0,0,12,0"/>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="Ana López" FontWeight="Medium" Foreground="{StaticResource TextColor}"/>
                                        <TextBlock Text="10:15 - Primera Consulta" FontSize="12" Foreground="#64748b" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                                <Border Background="#fef9c3" CornerRadius="12" Padding="8,4" HorizontalAlignment="Right">
                                    <TextBlock Text="pendiente" FontSize="11" Foreground="#ca8a04" FontWeight="Medium"/>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Quick Actions Card -->
                    <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="24" Margin="8">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="Acciones Rápidas" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextColor}" Margin="0,0,0,20"/>

                            <!-- Quick Action 1 -->
                            <Button Background="#eff6ff" BorderThickness="0" Padding="16" Margin="0,0,0,12" HorizontalContentAlignment="Stretch" Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="40" Height="40" Fill="{StaticResource PrimaryColor}" Margin="0,0,12,0"/>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="Registrar Nuevo Paciente" FontWeight="SemiBold" Foreground="{StaticResource TextColor}"/>
                                        <TextBlock Text="Agregar un paciente al sistema" FontSize="12" Foreground="#64748b" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Button>

                            <!-- Quick Action 2 -->
                            <Button Background="#f0fdf4" BorderThickness="0" Padding="16" Margin="0,0,0,12" HorizontalContentAlignment="Stretch" Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="40" Height="40" Fill="{StaticResource SuccessColor}" Margin="0,0,12,0"/>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="Agendar Cita" FontWeight="SemiBold" Foreground="{StaticResource TextColor}"/>
                                        <TextBlock Text="Programar nueva cita médica" FontSize="12" Foreground="#64748b" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Button>

                            <!-- Quick Action 3 -->
                            <Button Background="#fffbeb" BorderThickness="0" Padding="16" HorizontalContentAlignment="Stretch" Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="40" Height="40" Fill="{StaticResource WarningColor}" Margin="0,0,12,0"/>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="Generar Factura" FontWeight="SemiBold" Foreground="{StaticResource TextColor}"/>
                                        <TextBlock Text="Crear nueva factura de consulta" FontSize="12" Foreground="#64748b" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>