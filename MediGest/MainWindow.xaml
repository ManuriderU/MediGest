<Window x:Class="MediGest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MediGest Pro - Gestor Médico Profesional"
        Height="800" Width="1400"
        WindowState="Maximized">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- 🔗 Ruta relativa al archivo de estilos -->
                <ResourceDictionary Source="/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="{StaticResource SidebarColor}">
            <StackPanel>
                <!-- Logo Header -->
                <Border Padding="24" BorderBrush="#334155" BorderThickness="0,0,0,1">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                              Stroke="White" StrokeThickness="2" Width="24" Height="24" Stretch="Uniform" Margin="0,0,12,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="MediGest Pro" FontSize="18" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Sistema Médico" FontSize="11" Foreground="#94a3b8"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Navigation -->
                <StackPanel Margin="16">
                    <!-- Dashboard -->
                    <Button Style="{StaticResource NavButton}" Margin="0,0,0,4" Click="BtnMostrarDashboard_Click" x:Name="BtnDashboard">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M3,3 h7 v7 h-7 z M14,3 h7 v7 h-7 z M14,14 h7 v7 h-7 z M3,14 h7 v7 h-7 z"
                                  Stroke="#94a3b8" StrokeThickness="2" Width="20" Height="20" Stretch="Uniform" Margin="0,0,12,0"/>
                            <TextBlock Text="Dashboard" FontSize="14"  VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Pacientes -->
                    <Button Style="{StaticResource NavButton}" Margin="0,0,0,4" Cursor="Hand" Click="BtnMostrarPacientes_Click" x:Name="BtnPacientes">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2 M12,11 a4,4 0 1,0 0,-8 a4,4 0 1,0 0,8"
                                  Stroke="#94a3b8" StrokeThickness="2" Width="20" Height="20" Stretch="Uniform" Margin="0,0,12,0"/>
                            <TextBlock Text="Pacientes" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Citas -->
                    <Button Style="{StaticResource NavButton}" Margin="0,0,0,4" Click="BtnMostrarCitas_Click" x:Name="BtnCitas">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M3,4 h18 v18 h-18 z M16,2 v4 M8,2 v4 M3,10 h18"
                                  Stroke="#94a3b8" StrokeThickness="2" Width="20" Height="20" Stretch="Uniform" Margin="0,0,12,0"/>
                            <TextBlock Text="Citas" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Facturación -->
                    <Button Style="{StaticResource NavButton}" Click="BtnMostrarFacturacion_Click" Cursor="Hand" x:Name="BtnFacturacion">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z M14,2 L14,8 L20,8 M16,13 h-8 M16,17 h-8"
                                  Stroke="#94a3b8" StrokeThickness="2" Width="20" Height="20" Stretch="Uniform" Margin="0,0,12,0"/>
                            <TextBlock Text="Facturación" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
        <!-- Contenedor de Páginas -->
        <Frame x:Name="MainFrame"
               Grid.Column="1"
               NavigationUIVisibility="Hidden"
               Background="#f8fafc"/>
    </Grid>
</Window>