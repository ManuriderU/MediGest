<Window x:Class="MediGest.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediGest"
        mc:Ignorable="d"
        Title="Panel del Administrador" Height="800" Width="1400">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- 🔗 Ruta relativa al archivo de estilos -->
                <ResourceDictionary Source="/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="{StaticResource SidebarColor}">
            <StackPanel>
                <!-- Logo Header -->
                <Border Padding="24" BorderBrush="#334155" BorderThickness="0,0,0,1">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                              Stroke="White" StrokeThickness="2" Width="24" Height="24" Stretch="Uniform" Margin="0,0,12,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="MediGest Pro Admin" FontSize="18" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Panel Administrativo del Sistema Medico" FontSize="11" Foreground="#94a3b8"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Navigation -->
                <StackPanel Margin="16">
                    <!-- Usuarios -->
                    <Button Style="{StaticResource NavButton}" Margin="0,0,0,4" Click="BtnUsuarios_Click" x:Name="BtnUsuarios">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2 M12,11 a4,4 0 1,0 0,-8 a4,4 0 1,0 0,8"
       Stroke="#94a3b8" StrokeThickness="2" Width="20" Height="20" Stretch="Uniform" Margin="0,0,12,0"/>
                            <TextBlock Text="Usuarios" FontSize="14"  VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Medicos -->
                    <Button Style="{StaticResource NavButton}" Margin="0,0,0,4" Cursor="Hand" Click="BtnMedicos_Click" x:Name="BtnMedicos">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2 M12,11 a4,4 0 1,0 0,-8 a4,4 0 1,0 0,8"
                                  Stroke="#94a3b8" StrokeThickness="2" Width="20" Height="20" Stretch="Uniform" Margin="0,0,12,0"/>
                            <TextBlock Text="Medicos" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Recepcionistas -->
                    <Button Style="{StaticResource NavButton}" Margin="0,0,0,4" Click="BtnRecepcionistas_Click" x:Name="BtnRecepcionistas">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2 M12,11 a4,4 0 1,0 0,-8 a4,4 0 1,0 0,8"
                            Stroke="#94a3b8" StrokeThickness="2" Width="20" Height="20" Stretch="Uniform" Margin="0,0,12,0"/>
                            <TextBlock Text="Recepcionistas" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                </StackPanel>
            </StackPanel>
        </Border>
        <!-- Contenedor de Páginas -->
        <Frame x:Name="MainFrame"
               Grid.Column="1"
               NavigationUIVisibility="Hidden"
               Background="#f8fafc"/>
    </Grid>

</Window>
