<Window x:Class="MediGest.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MediGest Pro"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Width="400" Height="500"
        Background="#f1f5f9">

    <Border CornerRadius="16" 
            Background="White"
            Margin="20"
            Padding="30"
            BorderBrush="#e2e8f0"
            BorderThickness="1">

        <StackPanel VerticalAlignment="Center">

            <!-- Título -->
            <TextBlock Text="Bienvenido a MediGest Pro"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#1e293b"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Inicia sesión para continuar"
                       FontSize="14"
                       Foreground="#64748b"
                       HorizontalAlignment="Center"
                       Margin="0,4,0,20"/>

            <!-- Usuario -->
            <TextBlock Text="Usuario" 
                       FontWeight="SemiBold"
                       Foreground="#334155"
                       Margin="0,0,0,4"/>

            <Grid Margin="0,0,0,10">
                <TextBox x:Name="TxtUsuario" TextChanged="TxtUsuario_TextChanged"/>
                <TextBlock Text="Introduce tu usuario"
                           Foreground="#94a3b8"
                           Margin="12,0,0,0"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"
                           x:Name="PlaceholderUsuario"/>
            </Grid>

            <!-- Contraseña -->
            <TextBlock Text="Contraseña"
                       FontWeight="SemiBold"
                       Foreground="#334155"
                       Margin="0,12,0,4"/>

            <Grid>
                <PasswordBox x:Name="TxtPassword"
                             PasswordChanged="TxtPassword_PasswordChanged"/>
                <TextBlock Text="Introduce tu contraseña"
                           Foreground="#94a3b8"
                           Margin="12,0,0,0"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"
                           x:Name="PlaceholderPassword"/>
            </Grid>

            <!-- Botón de inicio -->
            <Button x:Name="BtnLogin"
                    Content="Iniciar Sesión"
                    Height="42"
                    Margin="0,25,0,0"
                    Background="#2563eb"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BtnLogin_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Pie -->
            <TextBlock Text="© 2025 Gestor Medico"
                       FontSize="12"
                       Foreground="#94a3b8"
                       HorizontalAlignment="Center"
                       Margin="0,25,0,0"/>
        </StackPanel>
    </Border>
</Window>
