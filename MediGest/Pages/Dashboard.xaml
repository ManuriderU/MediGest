<Page x:Class="MediGest.Pages.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MediGest.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Dashboard">

    <Grid>
        <ScrollViewer Padding="32" Margin="0,0,0,-270">
            <StackPanel>
                <!-- Page Header -->
                <Grid Margin="0,0,0,32">
                    <StackPanel>
                        <TextBlock Text="Dashboard" FontSize="32" FontWeight="Bold"/>
                        <TextBlock Text="Resumen general de la actividad de su consulta" FontSize="14" Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>

                <!-- Stats Grid -->
                <Grid Margin="0,0,0,32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Stat Card 1: Pacientes Registrados -->
                    <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="24" Margin="8">
                        <StackPanel>
                            <Grid Margin="0,0,0,16">
                                <TextBlock Text="Pacientes Registrados" FontSize="14" FontWeight="Medium"/>
                                <Ellipse Width="40" Height="40" Fill="#eff6ff" HorizontalAlignment="Right"/>
                                <Path Data="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2 M12,11 a4,4 0 1,0 0,-8 a4,4 0 1,0 0,8"
                              Stroke="#2563eb" StrokeThickness="2" Width="20" Height="20" Stretch="Uniform"
                              HorizontalAlignment="Right" Margin="0,10,10,0"/>
                            </Grid>
                            <TextBlock x:Name="txtPacientes" Text="247" FontSize="36" FontWeight="Bold"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <TextBlock x:Name="variacionPacientes" Text="+12% desde el mes pasado" FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Stat Card 2: Citas Hoy -->
                    <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="24" Margin="8">
                        <StackPanel>
                            <Grid Margin="0,0,0,16">
                                <TextBlock Text="Citas Hoy" FontSize="14" FontWeight="Medium"/>
                                <Ellipse Width="40" Height="40" Fill="#f0fdf4" HorizontalAlignment="Right"/>
                                <Path Data="M3,4 h18 v18 h-18 z M16,2 v4 M8,2 v4 M3,10 h18"
                              Stroke="#16a34a" StrokeThickness="2" Width="20" Height="20"
                              Stretch="Uniform" HorizontalAlignment="Right" Margin="0,10,10,0"/>
                            </Grid>
                            <TextBlock x:Name="txtCitasDiarias" Text="18" FontSize="36" FontWeight="Bold"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">

                                <TextBlock x:Name="variacionCitas" Text="+5 desde ayer" FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Stat Card 3: Consultas Este Mes -->
                    <Border Grid.Column="2" Background="White" CornerRadius="12" Padding="24" Margin="8">
                        <StackPanel>
                            <Grid Margin="0,0,0,16">
                                <TextBlock Text="Consultas Este Mes" FontSize="14" FontWeight="Medium"/>
                                <Ellipse Width="40" Height="40" Fill="#fffbeb" HorizontalAlignment="Right"/>
                                <Path Data="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z M14,2 L14,8 L20,8 M16,13 h-8 M16,17 h-8"
                              Stroke="#eab308" StrokeThickness="2" Width="20" Height="20"
                              Stretch="Uniform" HorizontalAlignment="Right" Margin="0,10,10,0"/>
                            </Grid>
                            <TextBlock x:Name="txtConsultasMensuales" Text="156" FontSize="36" FontWeight="Bold"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <TextBlock x:Name="variacionInformes" Text="+8% desde el mes pasado" FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Stat Card 4: Facturación Mensual -->
                    <Border Grid.Column="3" Background="White" CornerRadius="12" Padding="24" Margin="8">
                        <StackPanel>
                            <Grid Margin="0,0,0,16">
                                <TextBlock Text="Facturación Mensual" FontSize="14" FontWeight="Medium"/>
                                <Ellipse Width="40" Height="40" Fill="#eff6ff" HorizontalAlignment="Right"/>
                                <Path Data="M12,1 v22 M17,5 h-7.5 a3.5,3.5 0 0,0 0,7 h5 a3.5,3.5 0 0,1 0,7 h-8.5"
                              Stroke="#2563eb" StrokeThickness="2" Width="20" Height="20"
                              Stretch="Uniform" HorizontalAlignment="Right" Margin="0,10,10,0"/>
                            </Grid>
                            <TextBlock x:Name="txtFacturacionMensual" Text="$12,450" FontSize="36" FontWeight="Bold"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <TextBlock x:Name="variacionFacturaciones" Text="+15% desde el mes pasado" FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Dashboard Cards Row -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Today's Appointments Card -->
                    <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="24" Margin="8">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <Path Data="M3,4 h18 v18 h-18 z M16,2 v4 M8,2 v4 M3,10 h18"
                              Stroke="Black" StrokeThickness="2" Width="20" Height="20" Stretch="Uniform" Margin="0,0,8,0"/>
                                <TextBlock Text="Citas de Hoy" FontSize="18" FontWeight="SemiBold"/>
                            </StackPanel>

                            <!-- Appointment Item 1 -->
                            <Border BorderBrush="#e2e8f0" BorderThickness="0,0,0,1" Padding="0,0,0,16" Margin="0,0,0,16">
                                <Grid>
                                    <StackPanel x:Name="panelCitasDeHoy"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Quick Actions Card -->
                    <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="24" Margin="8">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="Acciones Rápidas" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>

                            <!-- Quick Action 1 -->
                            <Button Background="#eff6ff" BorderThickness="0" Padding="16" Margin="0,0,0,12"
                            HorizontalContentAlignment="Stretch" Cursor="Hand" Click="BtnRegistarPacienteClick">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="40" Height="40" Fill="#2563eb" Margin="0,0,12,0"/>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="Registrar Nuevo Paciente" FontWeight="SemiBold"/>
                                        <TextBlock Text="Agregar un paciente al sistema" FontSize="12" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Button>

                            <!-- Quick Action 2 -->
                            <Button Background="#f0fdf4" BorderThickness="0" Padding="16" Margin="0,0,0,12"
                            HorizontalContentAlignment="Stretch" Cursor="Hand" Click="BtnAgendarCitaClick">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="40" Height="40" Fill="#16a34a" Margin="0,0,12,0"/>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="Agendar Cita" FontWeight="SemiBold"/>
                                        <TextBlock Text="Programar nueva cita médica" FontSize="12" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Button>

                            <!-- Quick Action 3 -->
                            <Button Background="#fffbeb" BorderThickness="0" Padding="16"
                            HorizontalContentAlignment="Stretch" Cursor="Hand" Click="BtnGenerarFacturaClick">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="40" Height="40" Fill="#eab308" Margin="0,0,12,0"/>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="Generar Factura" FontWeight="SemiBold"/>
                                        <TextBlock Text="Crear nueva factura de consulta" FontSize="12" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
