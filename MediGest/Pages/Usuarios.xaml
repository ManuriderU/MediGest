<Page x:Class="MediGest.Pages.Usuarios"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MediGest.Pages"
      mc:Ignorable="d" 
      Title="Usuarios">

    <Grid Background="#F6F6F6" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Click derecho en una fila para el Menu de opciones"
                   FontSize="14"
                   Foreground="#6C757D"
                   Margin="496,2,-320,36" Grid.RowSpan="2"/>

        <!-- Buscador con Grid para ocupar todo el ancho -->
        <Grid Margin="0 0 0 15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ComboBox x:Name="cmbRol" Height="35" Grid.Column="0">
                <ComboBoxItem Content="Rol" IsSelected="True" IsEnabled="False"/>
                <ComboBoxItem Content="Admin"/>
                <ComboBoxItem Content="Medico"/>
                <ComboBoxItem Content="Recepcionista"/>
            </ComboBox>

            <Button x:Name="BtnBuscar"
            Content="Buscar"
            Height="35"
            Background="#007ACC"
            Foreground="White"
            FontWeight="Bold"
            BorderThickness="0"
            Grid.Column="2"
            Margin="10 0 0 0"
            Click="BtnBuscar_Click"/>

            <Button x:Name="BtnLimpiar"
                    Content="Limpiar"
                    Height="35"
                    Background="#999"
                    Foreground="White"
                    BorderThickness="0"
                    Grid.Column="3"
                    Margin="10,0,0,0"
                    Click="BtnLimpiar_Click" HorizontalAlignment="Left" Width="91"/>

            <Button x:Name="BtnCrear"
                    Content="Crear"
                    Height="35"
                    Background="#007ACC"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Grid.Column="1"
                    Margin="10 0 0 0"
                    Click="BtnCrear_Click"/>

        </Grid>

        <!-- DataGrid a ancho completo -->
        <DataGrid x:Name="DataGridUsuarios"
              Grid.Row="1"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              CanUserAddRows="False"
              RowHeight="35"
              AlternatingRowBackground="#F2F6FC"
              HeadersVisibility="Column"
              FontSize="14"
              BorderThickness="0"
              Margin="0,10,0,0"
              MouseDoubleClick="DataGridUsuarios_MouseDoubleClick"
              MouseRightButtonDown="DataGridUsuarios_MouseRightButtonDown"
              SelectionMode="Single"
              HorizontalAlignment="Stretch"
              HorizontalContentAlignment="Stretch">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Login" Binding="{Binding Login}" Width="*"/>
                <DataGridTextColumn Header="Contraseña" Binding="{Binding Password}" Width="*"/>
                <DataGridTextColumn Header="Rol" Binding="{Binding Rol}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>

</Page>