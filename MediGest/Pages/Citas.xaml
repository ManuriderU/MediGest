<Page x:Class="MediGest.Pages.Citas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Citas">

    <Grid Background="#F6F6F6" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 🔍 Buscador -->
        <TextBlock Text="Click derecho para Borrar una Cita" FontSize="14" Foreground="#6C757D" Margin="257,37,-257,0" Grid.RowSpan="2"/>
        <StackPanel Orientation="Horizontal" Margin="0 0 0 15" VerticalAlignment="Center">
            <TextBox x:Name="TxtBuscarPaciente"
                     Width="250"
                     Height="47"
                     Padding="10"
                     Margin="0 0 10 0"
                     FontSize="14"
                     GotFocus="TxtBuscarPaciente_GotFocus"
                     />
            <DatePicker x:Name="DateBuscar"
                        Width="180"
                        Height="35"
                        Margin="0 0 10 0"
                        FontSize="14"/>
            <ComboBox x:Name="cmbEstado" Width="100" Height="35"  Margin="0 0 10 0">
                <ComboBoxItem Content="Estado" IsSelected="True" IsEnabled="False"/>
                <ComboBoxItem Content="Pendiente"/>
                <ComboBoxItem Content="Confirmada"/>
                <ComboBoxItem Content="Cancelada"/>
                <ComboBoxItem Content="Realizada"/>
            </ComboBox>
            <Button x:Name="BtnBuscar"
                    Content="Buscar"
                    Width="100"
                    Height="35"
                    Background="#007ACC"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Click="BtnBuscar_Click"/>
            <Button x:Name="BtnLimpiar"
                    Content="Limpiar"
                    Width="100"
                    Height="35"
                    Margin="10 0 0 0"
                    Background="#999"
                    Foreground="White"
                    BorderThickness="0"
                    Click="BtnLimpiar_Click"/>
        </StackPanel>

        <!-- 📋 Tabla de citas -->
        <DataGrid x:Name="DataGridCitas"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  RowHeight="35"
                  AlternatingRowBackground="#F2F6FC"
                  HeadersVisibility="Column"
                  FontSize="14"
                  BorderThickness="0"
                  Margin="0 10 0 0"
                  MouseDoubleClick="DataGridCitas_MouseDoubleClick"
                  MouseRightButtonDown="DataGridCitas_MouseRightButtonDown"
                  SelectionMode="Single">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha, StringFormat=dd/MM/yyyy}" Width="120"/>
                <DataGridTextColumn Header="Hora" Binding="{Binding Hora}" Width="80"/>
                <DataGridTextColumn Header="Paciente" Binding="{Binding PacienteNombre}" Width="*"/>
                <DataGridTextColumn Header="Médico" Binding="{Binding MedicoNombre}" Width="*"/>
                <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="120"/>
                <DataGridTextColumn Header="Observaciones" Binding="{Binding Observaciones}" Width="250"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
