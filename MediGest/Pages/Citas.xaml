<Page x:Class="MediGest.Pages.Citas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MediGest.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Citas">

    <Grid>
        <ScrollViewer Padding="40">
            <StackPanel>
                <TextBlock Text="Agenda de Citas"
                           FontSize="32"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>
                <TextBlock Text="Visualice y administre las citas programadas para sus pacientes."
                           FontSize="16"
                           Margin="0,0,0,20"/>

                <Border Background="White" CornerRadius="12" Padding="24">
                    <StackPanel>
                        <TextBlock Text="🗓️ Ejemplo de citas" FontSize="20" Margin="0,0,0,10"/>
                        <TextBlock Text="• 09:00 - María González (Consulta General)" FontSize="14"/>
                        <TextBlock Text="• 09:30 - Carlos Rodríguez (Control)" FontSize="14"/>
                        <TextBlock Text="• 10:15 - Ana López (Primera Consulta)" FontSize="14"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
