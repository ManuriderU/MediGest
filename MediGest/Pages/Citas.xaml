<Page x:Class="MediGest.Pages.Citas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MediGest.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Citas">

    <ScrollViewer Background="#f1f5f9" Padding="32">
        <StackPanel>

            <!-- Encabezado -->
            <StackPanel Margin="0,0,0,24">
                <TextBlock Text="Gestión de Citas" FontSize="28" FontWeight="Bold" Foreground="#1E293B"/>
                <TextBlock Text="Consulta y administra las citas médicas programadas"
                           FontSize="14" Foreground="#64748b" Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Buscador y botón -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Background="White" CornerRadius="8" Padding="12" BorderBrush="#e2e8f0" BorderThickness="1" Margin="0,0,12,0">
                    <DockPanel>
                        <TextBlock Text="🔍" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox BorderThickness="0"
                                 FontSize="14"
                                 VerticalAlignment="Center"
                                 Text="Buscar por nombre o fecha..."/>
                    </DockPanel>
                </Border>

                <Button Grid.Column="1"
                        Background="#2563EB"
                        Foreground="White"
                        Padding="12,8"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        HorizontalAlignment="Right"
                        Cursor="Hand"
                        Content="Nueva Cita"/>
            </Grid>

            <!-- Tabla de ejemplo -->
            <Border Background="White" CornerRadius="8" BorderBrush="#e2e8f0" BorderThickness="1" Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="📅  Cita 1 — 15/11/2025 — Juan Pérez — Dr. Gómez"
                               FontSize="14" Foreground="#1E293B" Margin="0,0,0,8"/>
                    <TextBlock Text="📅  Cita 2 — 16/11/2025 — Ana López — Dr. Ramírez"
                               FontSize="14" Foreground="#1E293B" Margin="0,24,0,8" Grid.Row="1"/>
                    <TextBlock Text="📅  Cita 3 — 17/11/2025 — Carlos Ruiz — Dra. Martínez"
                               FontSize="14" Foreground="#1E293B" Margin="0,48,0,8" Grid.Row="2"/>
                </Grid>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
