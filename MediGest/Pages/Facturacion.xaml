<Page x:Class="MediGest.Pages.Facturacion"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MediGest.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Facturacion">

    <ScrollViewer Background="#f1f5f9" Padding="32">
        <StackPanel>

            <!-- Encabezado -->
            <StackPanel Margin="0,0,0,24">
                <TextBlock Text="Facturación" FontSize="28" FontWeight="Bold" Foreground="#1E293B"/>
                <TextBlock Text="Consulta el estado de las facturas emitidas"
                           FontSize="14" Foreground="#64748b" Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Tarjetas resumen -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="20" Margin="6">
                    <StackPanel>
                        <TextBlock Text="Ingresos Totales" FontSize="14" Foreground="#64748b"/>
                        <TextBlock Text="$24,500" FontSize="28" FontWeight="Bold" Foreground="#1E293B" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="20" Margin="6">
                    <StackPanel>
                        <TextBlock Text="Pendientes" FontSize="14" Foreground="#64748b"/>
                        <TextBlock Text="$2,300" FontSize="28" FontWeight="Bold" Foreground="#EAB308" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Background="White" CornerRadius="10" Padding="20" Margin="6">
                    <StackPanel>
                        <TextBlock Text="Pagadas" FontSize="14" Foreground="#64748b"/>
                        <TextBlock Text="$22,200" FontSize="28" FontWeight="Bold" Foreground="#16A34A" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Tabla de ejemplo -->
            <Border Background="White" CornerRadius="8" BorderBrush="#e2e8f0" BorderThickness="1" Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="🧾  Factura #001 — Juan Pérez — $120 — Pagada"
                               FontSize="14" Foreground="#1E293B" Margin="0,0,0,8"/>
                    <TextBlock Text="🧾  Factura #002 — Ana López — $75 — Pendiente"
                               FontSize="14" Foreground="#1E293B" Margin="0,24,0,8" Grid.Row="1"/>
                    <TextBlock Text="🧾  Factura #003 — Carlos Ruiz — $150 — Pagada"
                               FontSize="14" Foreground="#1E293B" Margin="0,48,0,8" Grid.Row="2"/>
                </Grid>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
