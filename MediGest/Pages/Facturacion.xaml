<Page x:Class="MediGest.Pages.Facturacion"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MediGest.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Facturacion">

    <ScrollViewer Background="#f1f5f9" Padding="32">
        <StackPanel>

            <!-- Encabezado -->
            <StackPanel Margin="0,0,0,24">
                <TextBlock Text="Facturación" FontSize="28" FontWeight="Bold" Foreground="#1E293B"/>
                <TextBlock Text="Consulta el estado de las facturas emitidas"
                           FontSize="14" Foreground="#64748b" Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Tarjetas resumen -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="20" Margin="6">
                    <StackPanel>
                        <TextBlock Text="Ingresos Totales" FontSize="14" Foreground="#64748b"/>
                        <TextBlock Name="txtTotalIngresos" Text="0,00€" FontSize="28" FontWeight="Bold" Foreground="#1E293B" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="20" Margin="6">
                    <StackPanel>
                        <TextBlock Text="Pendientes" FontSize="14" Foreground="#64748b"/>
                        <TextBlock Text="0,00€" x:Name="txtPendientes" FontSize="28" FontWeight="Bold" Foreground="#EAB308" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Background="White" CornerRadius="10" Padding="20" Margin="6">
                    <StackPanel>
                        <TextBlock Text="Pagadas" FontSize="14" Foreground="#64748b"/>
                        <TextBlock x:Name="txtPagadas" Text="0,00€" FontSize="28" FontWeight="Bold" Foreground="#16A34A" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Tabla de ejemplo -->
            <!-- 📁 Lista de facturas -->
            <TextBlock Text="🧾 Facturas emitidas" FontSize="18" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,12"/>
            <Border Background="White" CornerRadius="8" BorderBrush="#e2e8f0" BorderThickness="1" Padding="16">
                <ListView x:Name="lstFacturas" MouseDoubleClick="lstFacturas_MouseDoubleClick">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Factura" Width="200" DisplayMemberBinding="{Binding Nombre}" />
                            <GridViewColumn Header="Estado" Width="200" DisplayMemberBinding="{Binding Estado}" />
                            <GridViewColumn Header="Monto (€)" Width="280" DisplayMemberBinding="{Binding Monto}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
