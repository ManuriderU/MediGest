<Page x:Class="MediGest.Pages.Pacientes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MediGest.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Pacientes">

    <Grid>
        <ScrollViewer Padding="40">
            <StackPanel>
                <TextBlock Text="Gestión de Pacientes"
                           FontSize="32"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>
                <TextBlock Text="Aquí podrá ver, agregar o editar los pacientes registrados en el sistema."
                           FontSize="16"
                           Margin="0,0,0,20"/>

                <Border Background="White" CornerRadius="12" Padding="24" >
                    <StackPanel>
                        <TextBlock Text="👩‍⚕️ Ejemplo de lista de pacientes" FontSize="20" Margin="0,0,0,10"/>
                        <TextBlock Text="• María González" FontSize="14"/>
                        <TextBlock Text="• Carlos Rodríguez" FontSize="14"/>
                        <TextBlock Text="• Ana López" FontSize="14"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
